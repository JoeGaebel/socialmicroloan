<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.campaigns.any? %>
      <h3>Campaigns (<%= @user.campaigns.count %>)</h3>
      <ol class="campaigns">
        <%= render @campaigns %>
      </ol>
      <%= will_paginate @campaigns %>
    <% end %>
  </div>
</div>
